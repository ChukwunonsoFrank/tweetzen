<div>
  <% if (user) { %>
  <p>Hi, <%= user.username %></p>
  <% if (user.photos !== undefined) { %>
  <img
    src="<%= user.photos[0].value %>"
    alt="user_profile_picture"
    width="40"
    height="40"
    style="border-radius: 40px"
  />
  <% } %>
  <a href="/auth/twitter/login">Sign in</a>
  <a href="/logout">Logout</a>
  <% } else { %>
  <a href="/auth/twitter/login">Sign in</a>
  <a href="/logout">Logout</a>
  <% } %>
</div>
